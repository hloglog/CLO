<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/border_color"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 이미지 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="옷장 아이템 이미지"
                android:background="@drawable/image_placeholder" />

            <!-- 카테고리 태그 -->
            <TextView
                android:id="@+id/categoryTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:text="상의"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:fontFamily="@font/notable_regular"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/category_tag_background" />

        </FrameLayout>

        <!-- 하단 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 파일명 -->
            <TextView
                android:id="@+id/fileNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMG_20250612_1503.jpg"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/notable_regular"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 추가된 날짜 -->
            <TextView
                android:id="@+id/dateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2025.06.12"
                android:textSize="10sp"
                android:textColor="@color/text_hint"
                android:fontFamily="@font/notable_regular" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 