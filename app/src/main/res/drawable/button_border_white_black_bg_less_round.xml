<ripple xmlns:android="http://schemas.android.com/apk/res/android"
android:color="@color/white"> <!-- Ripple 효과 색상 (흰색 ripple) -->

<item>
    <shape android:shape="rectangle">
        <solid android:color="#FF000000" /> <!-- 배경: 검정 -->
        <stroke
            android:width="2.5dp"
            android:color="#FFFFFFFF" /> <!-- 테두리: 흰색 -->
        <corners android:radius="4dp" /> <!-- 둥근 정도 -->
    </shape>
</item>
</ripple>
